dnl Process this file with autoconf to produce a configure script.
AC_INIT(configure.in)

dnl Checks for C++ compiler and sets default flags
AC_PROG_CXX([CC g++])

AM_INIT_AUTOMAKE(pmonitor, 0.1)
AC_ENABLE_STATIC(no)
AC_PROG_LIBTOOL



dnl   no point in suppressing warnings people should 
dnl   at least see them, so here we go for g++: -Wall
if test $ac_cv_prog_gxx = yes; then
  CXXFLAGS="$CXXFLAGS -Wall"
fi

AC_LANG_SAVE

AC_CHECK_FILE( $OFFLINE_MAIN/include/frog/FROG.h,have_frog=yes, have_frog=no)
AC_MSG_RESULT([$have_frog])

AM_CONDITIONAL(FROG, test "$have_frog" = yes )

if test $have_frog = yes; then
  AC_DEFINE(HAVE_FROG)
fi


AC_LANG_RESTORE

AC_OUTPUT(Makefile)
